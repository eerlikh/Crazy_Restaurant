

<h2> Edit Order </h2>

<form action="/orders/<%= @order.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="text" name="order[paid_status]" value="<%= @order.paid_status %>">
  <input type="text" name="order[party_id]" value="<%= @order.party.id %>">
  <input type="text" name="order[inventory_item_id]" value="<%= @order.inventory_item.id %>">

  <input type="submit" value="Update Order">
</form>
